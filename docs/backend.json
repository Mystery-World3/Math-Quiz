
{
  "entities": {
    "Class": {
      "title": "Class",
      "description": "Educational class levels",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the class level"
        }
      },
      "required": ["name"]
    },
    "Question": {
      "title": "Question",
      "description": "A question for the digital worksheet",
      "type": "object",
      "properties": {
        "classLevel": {
          "type": "string"
        },
        "text": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["multiple-choice", "numeric", "short-answer"]
        },
        "options": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "correctAnswer": {
          "type": "string"
        }
      },
      "required": ["classLevel", "text", "type", "correctAnswer"]
    },
    "Submission": {
      "title": "Submission",
      "description": "A student's worksheet submission result",
      "type": "object",
      "properties": {
        "studentName": {
          "type": "string"
        },
        "classLevel": {
          "type": "string"
        },
        "score": {
          "type": "number"
        },
        "totalQuestions": {
          "type": "number"
        },
        "answers": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["studentName", "classLevel", "score", "totalQuestions", "answers", "timestamp"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/classes/{classId}": {
      "schema": "Class",
      "description": "Collection of available class levels with full CRUD access"
    },
    "/questions/{questionId}": {
      "schema": "Question",
      "description": "Collection of learning questions with full CRUD access"
    },
    "/submissions/{submissionId}": {
      "schema": "Submission",
      "description": "Collection of student exam results with full administrative CRUD access (create, read, update, delete)"
    }
  }
}
